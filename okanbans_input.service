[Unit]
Description= Application OKanbans OLFA
After=network.target graphical.target
Wants=graphical.target

[Service]
ExecStart=/bin/bash -c "export DISPLAY=:0; export XAUTHORITY=/home/pi/.Xauthority; sudo /usr/bin/python /opt/OKanbans/okanbans.py --mode input --fullscreen"
KillMode=process
TimeoutSec=infinity
WorkingDirectory=/opt/OKanbans/
User=pi
Group=pi
RemainAfterExit=no

[Install]
WantedBy=graphical.target
